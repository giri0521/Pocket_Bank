{
  "name": "Pocket_Bank (C++ Dev)",
  "image": "mcr.microsoft.com/devcontainers/cpp:1-ubuntu-22.04",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/cmake:1": {},
    "ghcr.io/devcontainers/features/vcpkg:1": {}
  },
  "postCreateCommand": "vcpkg integrate install && ./vcpkg/bootstrap-vcpkg.sh || true",
  "customizations": {
    "vscode": {
      "settings": {
        "cmake.generator": "Ninja",
        "cmake.buildDirectory": "build",
        "cmake.configureSettings": {
          "CMAKE_TOOLCHAIN_FILE": "${containerWorkspaceFolder}/cmake/vcpkg-toolchain.cmake"
        },
        "C_Cpp.default.compilerPath": "/usr/bin/g++",
        "C_Cpp.default.cStandard": "c17",
        "C_Cpp.default.cppStandard": "c++20",
        "editor.formatOnSave": false,
        "cmake.configureOnOpen": false
      },
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "xaver.clang-format"
      ]
    }
  },
  "forwardPorts": [8080],
  "remoteUser": "root"
}